<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Sanity Suite"
       verbose="1"
       parallel="false">

    <!-- Listeners -->
    <listeners>
        <listener class-name="com.keanest.framework.reports.TestListener"/>
    </listeners>

    <!-- Sanity Tests -->
    <test name="Login Sanity Tests">

        <!-- Groups to run -->
        <groups>
            <run>
                <include name="sanity"/>
                <include name="login"/>
                <include name="branding"/>
            </run>
        </groups>

        <!-- Test Packages -->
        <packages>
            <package name="com.keanest.tests.testcases"/>
        </packages>

    </test>

</suite>
