<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Member Profile End-to-End Flow"
       verbose="1"
       parallel="false">

    <!-- Listeners -->
    <listeners>
        <listener class-name="com.keanest.framework.reports.TestListener"/>
    </listeners>

    <test name="Login + Member Profile Flow">

        <!-- Groups to execute -->
        <groups>
            <run>
                <!-- Smoke login -->
                <include name="smoke"/>

                <!-- Member profile happy paths -->
                <include name="memberProfilePositive"/>
            </run>
        </groups>

        <!-- Scan testcases package -->
        <packages>
            <package name="com.keanest.tests.testcases"/>
        </packages>

    </test>

</suite>
